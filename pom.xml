<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.mabartos</groupId>
    <artifactId>keycloak-adaptive-parent</artifactId>
    <version>0.1.1</version>

    <name>Keycloak Adaptive Authentication Extension Parent</name>

    <modules>
        <module>common</module>
        <module>adaptive</module>
        <module>authn-policy</module>
    </modules>

    <packaging>pom</packaging>

    <properties>
        <realm.example.name/>

        <keycloak.version>999.0.0-SNAPSHOT</keycloak.version>
        <keycloak.dist.version>${keycloak.version}</keycloak.dist.version>

        <seancfoley.ipaddress.version>5.5.0</seancfoley.ipaddress.version>

        <keycloak.distribution.path>${project.build.directory}/unpacked/keycloak-${keycloak.dist.version}
        </keycloak.distribution.path>

        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- Maven Plugins -->
        <maven.plugins.compiler.version>3.13.0</maven.plugins.compiler.version>
        <maven.plugins.jar.version>3.4.2</maven.plugins.jar.version>
        <maven.plugins.exec.version>3.4.1</maven.plugins.exec.version>
        <maven.plugins.resources.version>3.3.1</maven.plugins.resources.version>
        <maven.plugins.assembly.version>3.7.1</maven.plugins.assembly.version>
        <maven.plugins.dependency.version>3.7.1</maven.plugins.dependency.version>
        <maven.plugins.gpg.version>3.2.6</maven.plugins.gpg.version>
        <nexus.staging.plugin.version>1.7.0</nexus.staging.plugin.version>
    </properties>

    <dependencyManagement>
        <dependencies>
            <dependency>
                <groupId>org.keycloak</groupId>
                <artifactId>keycloak-common</artifactId>
                <version>${keycloak.version}</version>
            </dependency>
            <dependency>
                <groupId>org.keycloak</groupId>
                <artifactId>keycloak-core</artifactId>
                <version>${keycloak.version}</version>
            </dependency>
            <dependency>
                <groupId>org.keycloak</groupId>
                <artifactId>keycloak-services</artifactId>
                <version>${keycloak.version}</version>
            </dependency>
            <dependency>
                <groupId>org.keycloak</groupId>
                <artifactId>keycloak-server-spi-private</artifactId>
                <version>${keycloak.version}</version>
            </dependency>
            <dependency>
                <groupId>org.keycloak</groupId>
                <artifactId>keycloak-server-spi</artifactId>
                <version>${keycloak.version}</version>
            </dependency>
            <dependency>
                <groupId>org.keycloak</groupId>
                <artifactId>keycloak-quarkus-server</artifactId>
                <version>${keycloak.version}</version>
            </dependency>
            <dependency>
                <groupId>com.github.seancfoley</groupId>
                <artifactId>ipaddress</artifactId>
                <version>${seancfoley.ipaddress.version}</version>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <pluginManagement>
            <plugins>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-dependency-plugin</artifactId>
                    <version>${maven.plugins.dependency.version}</version>
                    <executions>
                        <execution>
                            <id>unpack-server</id>
                            <phase>package</phase>
                            <goals>
                                <goal>unpack</goal>
                            </goals>
                            <configuration>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>org.keycloak</groupId>
                                        <artifactId>keycloak-quarkus-dist</artifactId>
                                        <version>${keycloak.dist.version}</version>
                                        <type>zip</type>
                                        <outputDirectory>${project.build.directory}/unpacked</outputDirectory>
                                    </artifactItem>
                                </artifactItems>
                            </configuration>
                        </execution>
                        <execution>
                            <id>copy-extension-provider</id>
                            <phase>package</phase>
                            <goals>
                                <goal>copy</goal>
                            </goals>
                            <configuration>
                                <artifactItems>
                                    <artifactItem>
                                        <groupId>${project.groupId}</groupId>
                                        <artifactId>${project.artifactId}</artifactId>
                                        <version>${project.version}</version>
                                        <type>jar</type>
                                        <overWrite>false</overWrite>
                                        <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                    </artifactItem>
                                    <artifactItem>
                                        <groupId>${project.groupId}</groupId>
                                        <artifactId>keycloak-adaptive-common</artifactId>
                                        <version>${project.version}</version>
                                        <type>jar</type>
                                        <overWrite>false</overWrite>
                                        <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                    </artifactItem>
                                </artifactItems>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.codehaus.mojo</groupId>
                    <artifactId>exec-maven-plugin</artifactId>
                    <version>${maven.plugins.exec.version}</version>
                    <configuration>
                        <environmentVariables>
                            <KEYCLOAK_ADMIN>admin</KEYCLOAK_ADMIN>
                            <KEYCLOAK_ADMIN_PASSWORD>admin</KEYCLOAK_ADMIN_PASSWORD>
                        </environmentVariables>
                    </configuration>
                    <executions>
                        <execution>
                            <id>compile</id>
                            <phase>none</phase>
                            <goals>
                                <goal>exec</goal>
                            </goals>
                            <configuration>
                                <executable>bash</executable>
                                <arguments>
                                    <argument>../mvnw</argument>
                                    <argument>clean</argument>
                                    <argument>install</argument>
                                    <argument>-DskipTests</argument>
                                </arguments>
                            </configuration>
                        </execution>
                        <execution>
                            <id>export-realm</id>
                            <phase>none</phase>
                            <goals>
                                <goal>exec</goal>
                            </goals>
                            <configuration>
                                <executable>bash</executable>
                                <arguments>
                                    <argument>${keycloak.distribution.path}/bin/kc.sh</argument>
                                    <argument>export</argument>
                                    <argument>--dir=src/main/resources</argument>
                                    <argument>--users=realm_file</argument>
                                    <argument>--realm=${realm.example.name}</argument>
                                </arguments>
                            </configuration>
                        </execution>
                        <execution>
                            <id>start-server</id>
                            <phase>none</phase>
                            <goals>
                                <goal>exec</goal>
                            </goals>
                            <configuration>
                                <executable>bash</executable>
                                <arguments>
                                    <argument>${keycloak.distribution.path}/bin/kc.sh</argument>
                                    <argument>--debug</argument>
                                    <argument>start-dev</argument>
                                    <argument>--import-realm</argument>
                                </arguments>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-compiler-plugin</artifactId>
                    <version>${maven.plugins.compiler.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-resources-plugin</artifactId>
                    <version>${maven.plugins.resources.version}</version>
                    <executions>
                        <execution>
                            <id>copy-keycloak-config-file</id>
                            <phase>install</phase>
                            <goals>
                                <goal>copy-resources</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${keycloak.distribution.path}/conf</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>src/main/resources</directory>
                                        <includes>
                                            <include>keycloak.conf</include>
                                        </includes>
                                    </resource>
                                </resources>
                            </configuration>
                        </execution>
                        <execution>
                            <id>copy-realm</id>
                            <phase>install</phase>
                            <goals>
                                <goal>copy-resources</goal>
                            </goals>
                            <configuration>
                                <outputDirectory>${keycloak.distribution.path}/data/import</outputDirectory>
                                <resources>
                                    <resource>
                                        <directory>src/main/resources</directory>
                                        <includes>
                                            <include>${realm.example.name}-realm.json</include>
                                        </includes>
                                    </resource>
                                </resources>
                            </configuration>
                        </execution>
                    </executions>
                </plugin>
                <plugin>
                    <groupId>org.apache.maven.plugins</groupId>
                    <artifactId>maven-assembly-plugin</artifactId>
                    <version>${maven.plugins.assembly.version}</version>
                </plugin>
                <plugin>
                    <groupId>org.sonatype.plugins</groupId>
                    <artifactId>nexus-staging-maven-plugin</artifactId>
                    <version>${nexus.staging.plugin.version}</version>
                    <extensions>true</extensions>
                    <configuration>
                        <serverId>ossrh</serverId>
                        <nexusUrl>https://s01.oss.sonatype.org/</nexusUrl>
                        <autoReleaseAfterClose>true</autoReleaseAfterClose>
                    </configuration>
                </plugin>
            </plugins>
        </pluginManagement>

        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-gpg-plugin</artifactId>
                <version>${maven.plugins.gpg.version}</version>
                <executions>
                    <execution>
                        <id>sign-artifacts</id>
                        <phase>verify</phase>
                        <goals>
                            <goal>sign</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <distributionManagement>
        <repository>
            <id>github</id>
            <name>GitHub Packages Repository</name>
            <url>https://maven.pkg.github.com/mabartos/keycloak/</url>
        </repository>
        <snapshotRepository>
            <id>ossrh</id>
            <url>https://s01.oss.sonatype.org/content/repositories/snapshots</url>
        </snapshotRepository>
    </distributionManagement>
</project>