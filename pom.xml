<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <groupId>org.keycloak</groupId>
    <artifactId>keycloak-adaptive-authn</artifactId>
    <version>999.0.0-SNAPSHOT</version>

    <name>Keycloak Adaptive Authentication Extension</name>
    <packaging>jar</packaging>

    <properties>
        <keycloak.version>${project.version}</keycloak.version>
        <seancfoley.ipaddress.version>5.5.0</seancfoley.ipaddress.version>
        <langchain4j.openai.version>0.12.0</langchain4j.openai.version>

        <maven.plugins.compiler.version>3.13.0</maven.plugins.compiler.version>
        <maven.plugins.jar.version>3.3.0</maven.plugins.jar.version>
        <maven.plugins.exec.version>3.2.0</maven.plugins.exec.version>

        <keycloak.distribution.path>${project.build.directory}/unpacked/keycloak-${keycloak.version}</keycloak.distribution.path>

        <maven.compiler.source>17</maven.compiler.source>
        <maven.compiler.target>17</maven.compiler.target>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
    </properties>

    <dependencies>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-common</artifactId>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-core</artifactId>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-services</artifactId>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-server-spi-private</artifactId>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-server-spi</artifactId>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>org.keycloak</groupId>
            <artifactId>keycloak-quarkus-server</artifactId>
            <version>${keycloak.version}</version>
        </dependency>
        <dependency>
            <groupId>com.github.seancfoley</groupId>
            <artifactId>ipaddress</artifactId>
            <version>${seancfoley.ipaddress.version}</version>
        </dependency>

        <!-- AI -->
        <dependency>
            <groupId>io.quarkiverse.langchain4j</groupId>
            <artifactId>quarkus-langchain4j-openai</artifactId>
            <version>${langchain4j.openai.version}</version>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <version>${maven.plugins.compiler.version}</version>
            </plugin>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-jar-plugin</artifactId>
                <version>${maven.plugins.jar.version}</version>
            </plugin>
            <plugin>
                <artifactId>maven-dependency-plugin</artifactId>
                <executions>
                    <execution>
                        <id>unpack-server-or-overlay</id>
                        <phase>generate-resources</phase>
                        <goals>
                            <goal>unpack</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>org.keycloak</groupId>
                                    <artifactId>keycloak-quarkus-dist</artifactId>
                                    <version>${keycloak.version}</version>
                                    <type>zip</type>
                                    <outputDirectory>${project.build.directory}/unpacked</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                    <execution>
                        <id>copy-extension-provider</id>
                        <phase>install</phase>
                        <goals>
                            <goal>copy</goal>
                        </goals>
                        <configuration>
                            <artifactItems>
                                <artifactItem>
                                    <groupId>${project.groupId}</groupId>
                                    <artifactId>${project.artifactId}</artifactId>
                                    <version>${project.version}</version>
                                    <type>jar</type>
                                    <overWrite>false</overWrite>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.github.seancfoley</groupId>
                                    <artifactId>ipaddress</artifactId>
                                    <version>${seancfoley.ipaddress.version}</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <!--LangChain4j-->
                                <artifactItem>
                                    <groupId>io.quarkiverse.langchain4j</groupId>
                                    <artifactId>quarkus-langchain4j-openai</artifactId>
                                    <version>${langchain4j.openai.version}</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>io.quarkiverse.langchain4j</groupId>
                                    <artifactId>quarkus-langchain4j-core</artifactId>
                                    <version>${langchain4j.openai.version}</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>dev.langchain4j</groupId>
                                    <artifactId>langchain4j-open-ai</artifactId>
                                    <version>0.30.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>dev.langchain4j</groupId>
                                    <artifactId>langchain4j</artifactId>
                                    <version>0.30.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>dev.langchain4j</groupId>
                                    <artifactId>langchain4j-core</artifactId>
                                    <version>0.30.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>dev.ai4j</groupId>
                                    <artifactId>openai4j</artifactId>
                                    <version>0.17.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.squareup.okhttp3</groupId>
                                    <artifactId>okhttp</artifactId>
                                    <version>4.12.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.squareup.retrofit2</groupId>
                                    <artifactId>retrofit</artifactId>
                                    <version>2.11.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.squareup.retrofit2</groupId>
                                    <artifactId>converter-gson</artifactId>
                                    <version>2.11.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>org.jetbrains.kotlin</groupId>
                                    <artifactId>kotlin-stdlib</artifactId>
                                    <version>1.9.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.squareup.okio</groupId>
                                    <artifactId>okio-jvm</artifactId>
                                    <version>3.9.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.google.code.gson</groupId>
                                    <artifactId>gson</artifactId>
                                    <version>2.10.1</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                                <artifactItem>
                                    <groupId>com.knuddels</groupId>
                                    <artifactId>jtokkit</artifactId>
                                    <version>1.0.0</version>
                                    <type>jar</type>
                                    <outputDirectory>${keycloak.distribution.path}/providers</outputDirectory>
                                </artifactItem>
                            </artifactItems>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <version>${maven.plugins.exec.version}</version>
                <configuration>
                    <environmentVariables>
                        <KEYCLOAK_ADMIN>admin</KEYCLOAK_ADMIN>
                        <KEYCLOAK_ADMIN_PASSWORD>admin</KEYCLOAK_ADMIN_PASSWORD>
                    </environmentVariables>
                </configuration>
                <executions>
                    <execution>
                        <id>compile</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>${project.basedir}/mvnw</argument>
                                <argument>clean</argument>
                                <argument>install</argument>
                                <argument>-DskipTests</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>import-realm</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>${keycloak.distribution.path}/bin/kc.sh</argument>
                                <argument>import</argument>
                                <argument>--file=${project.basedir}/data/adaptive-realm.json</argument>
                                <argument>--optimized</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>export-realm</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>${keycloak.distribution.path}/bin/kc.sh</argument>
                                <argument>export</argument>
                                <argument>--dir=${project.basedir}/data</argument>
                                <argument>--users=realm_file</argument>
                                <argument>--realm=adaptive</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>start-server</id>
                        <phase>none</phase>
                        <goals>
                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <executable>bash</executable>
                            <arguments>
                                <argument>${keycloak.distribution.path}/bin/kc.sh</argument>
                                <argument>--debug</argument>
                                <argument>start-dev</argument>
                                <argument>--log-level=org.keycloak.adaptive:debug,org.keycloak.services:debug</argument>
                                <argument>--verbose</argument>
                            </arguments>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

    <profiles>
        <profile>
            <id>dev</id>
            <activation>
                <activeByDefault>true</activeByDefault>
            </activation>
            <properties>
                <keycloak.version>888.0.0-ADAPTIVE</keycloak.version>
            </properties>
        </profile>
    </profiles>
</project>